extends layout

block content
    h1=title
    ul.errors
        if errors
            each error, i in errors
                li.alert #{error.msg}

    form.form(method='post', action='/posts/create')
        .form-group
            label Title:
            input.form-title(name='title', type='text', placeholder="enter a title")
        .form-group
            label Category
            select.form-control(name='category')
                each category, i in categories
                    option(value='#{category.title}') #{category.title}
        .form-group
            label Body
            textarea.form-control(name='body', id='body')
        input.form-button(name='submit', type='submit', value='Save')
        script(src="//cdn.ckeditor.com/4.5.10/basic/ckeditor.js")
        script
            | CKEDITOR.replace('body')
