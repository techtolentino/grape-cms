extends layout

block content
    h1
        - console.log(posts, "<<<<<<<<<<<<<<<<")
        if posts
            each post, i in posts
                h1
                    a(href='/posts/show/#{post._id}')
                        =post.title
                p.meta Posted in #{post.category} on #{moment(post.date).format("MM-DD-YYYY")}
                !=post.body
        else
            p There are no Lines to display
